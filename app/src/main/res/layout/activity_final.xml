<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_final"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sahil.quickNotes.FinalActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:id="@+id/barLayout">

        <android.support.v7.widget.Toolbar
            android:id="@+id/finalToolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay"/>

    </android.support.design.widget.AppBarLayout>
    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:src="@drawable/ic_check"
        android:id="@+id/finalFab"
        android:layout_alignParentRight="true"/>

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:src="@drawable/ic_delete"
        android:id="@+id/deleteFab"
        android:layout_alignParentLeft="true"/>
    <LinearLayout
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/barLayout"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:orientation="vertical">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/boarding_screen_text_size"
            android:hint="Title"
            android:id="@+id/editTitle"
            android:padding="@dimen/appbar_padding_top"
            android:background="@drawable/shape_rectangle_colorless_border"
            android:textColor="@color/primaryText"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:hint="Body"
            android:textColor="@color/primaryText"
            android:id="@+id/editBody"
            android:padding="@dimen/appbar_padding_top"
            android:background="@drawable/shape_rectangle_colorless_border"
            android:layout_marginTop="@dimen/activity_vertical_margin"/>
    </LinearLayout>
</RelativeLayout>
